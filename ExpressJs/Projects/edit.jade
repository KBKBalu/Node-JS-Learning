extends ../layout

block content
    h1.
        Paper ID #{paper._id}
    form(action='/news/#{paper._id}/edit',method='post',name='updatepaper',enctype='application/x-www-form-urlencoded')
        p Name: 
            input#inputName(type='text', value='#{paper.name}', name='name')
        p Language: 
            input#inputLanguage(type='text', value='#{paper.language}', name='language')
        p DayofDate: 
            input#inputDayofDate(type='date', value='#{paperdayofdate}', name='dayofdate')
        p Are you Liked?: 
            input#inputIsBest(type='checkbox', name='isbest', checked=('#{paper.isbest}'==='true' ? "checked" : undefined))
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update
